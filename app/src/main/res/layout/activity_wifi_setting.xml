       <TextView
           android:id="@+id/txt_msg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:text="@string/password_char_msg" />

        <RelativeLayout
            android:id="@+id/rlWifiNameType"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvWifiNameType"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_wifi_name_option_for_2_4g_amp_5g"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgHelp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/tvWifiNameType"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:onClick="showPopupWindow"
                android:src="@drawable/ic_info_white_24dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llWifiNameTypeOption"
            android:visibility="gone"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/light_gray_color"
                android:textColor="@color/btn_text_color"
                android:text="Same WiFi Name"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnDifferent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/light_gray_color"
                android:textColor="@color/btn_text_color"
                android:text="Different WiFi Name"
                android:textAllCaps="false"
                android:textSize="13sp" />


        </LinearLayout>

