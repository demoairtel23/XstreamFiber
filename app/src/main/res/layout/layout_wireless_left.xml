<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_network_map_line"
        android:layout_height="40dp"
        android:background="@color/color_network_map_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="15dp"
        android:layout_height="@dimen/dp_network_map_line"
        android:background="@color/color_network_map_line"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1"/>

    <ImageView
        android:id="@+id/iv_green1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_green_screen_new"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="@id/view2"
         />

    <TextView
        android:id="@+id/tv_pc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdsadfadsfa"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp12"
        android:padding="@dimen/dp3"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/iv_green1"
        app:layout_constraintStart_toEndOf="@id/view3"/>

    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/dp_network_map_line"
        android:layout_height="55dp"
        android:background="@color/color_network_map_line"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>